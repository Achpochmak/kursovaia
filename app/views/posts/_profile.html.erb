<div class="column is-one-quarter">
	<nav class="panel">
		<p class="panel-heading"><%= t('new.profile')%></p>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
<%= image_tag "profile.jpg"%> 					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							<strong><%= current_user.email %></strong><br />
						</p>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="title is-6"><%=t("new.posts") %>: <%= current_user.posts.count %></p>
					</div>
				</div>
			</div>
		</div>
	</nav>
</div>