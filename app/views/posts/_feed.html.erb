<div class="column is-half">
  <% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
<%= image_tag "profile.jpg"%> 		
		</figure>
		<div class="media-content">
		<div id="post">
			 <%= render 'posts/form' %>
		</div>
	</article>
	  <% else%> 
	  	  	 <div class="box">
		  	<article class="media">
	  <div class='content'>
	  <div class='registration' >
	  
	  </div>
            <p class="control">
              <%= link_to t('new.sign_in'), new_user_session_path, class: "button is-primary" %>
            </p>
			<p class="control">
              <%= link_to t('new.sign_up'), new_user_registration_path, class: "button is-primary" %>
            </p>
			</div>
			</div>
			</article>
			</div>
  <% end %>


<% @posts.each do | post | %>
 
        <% if user_signed_in? && current_user.id == post.user_id %>
		 <div class="box">
		  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<%= image_tag "profile.jpg"%> 
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= post.try(:updated_at).to_formatted_s(:long) %></strong><br />
  		
  				<p><%= post.post %></p>
  			</div>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to post, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_post_path(post), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>

<% end %>

</div>